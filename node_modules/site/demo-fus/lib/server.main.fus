fus 2.4.1
import "./shared.manifest" all

server: import "site/server"
import "./shared.main"
server.host: "127.0.0.1"
server.httpPort: 40000
server.onRequest ctx ->
    path: ctx.request.path
    response: ctx.response
    if path.is "/"
        response.handleHome()
    else if path.in "/node/version"
        response.send process.version
    else
        response.handleFile()
server.start()
